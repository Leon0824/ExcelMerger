{
  "package": {
    "productName": "ExcelMerger",
    "version": "0.2.3"
  },
  "build": {
    "distDir": "../build",
    "devPath": "http://localhost:3000",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "tauri": {
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "excelmerger",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "resources": [],
      "externalBin": [
        "../src-python/dist/merger"
      ],
      "copyright": "",
      "category": "Productivity",
      "shortDescription": "ExcelMerger merges Excel files",
      "longDescription": "ExcelMerger merges Excel files",
      "deb": {
        "depends": []
      },
      "macOS": {
        "frameworks": [],
        "exceptionDomain": "",
        "signingIdentity": null,
        "providerShortName": null,
        "entitlements": null
      },
      "windows": {
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "timestampUrl": "",
        "wix": {
          "language": "zh-TW"
        }
      }
    },
    "updater": {
      "active": false
    },
    "allowlist": {
      "all": true,
      "shell": {
        "sidecar": true,
        "scope": [
          {
            "name": "../src-python/dist/merger",
            "cmd": "merger",
            "args": true,
            "sidecar": true
          }
        ]
      }
    },
    "windows": [
      {
        "fileDropEnabled": false,
        "center": true,
        "title": "ExcelMerger",
        "width": 400,
        "height": 400,
        "resizable": false,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  }
}
