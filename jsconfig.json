{
	"extends": "./.svelte-kit/tsconfig.json",
	"compilerOptions": {
		"skipLibCheck": true,
		"paths": {
			"$lib": [
				"src/lib"
			],
			"$lib/*": [
				"src/lib/*"
			],
		},
		"plugins": [
			{
				"name": "vite-plugin-iso-import",
			}
		]
	},
	"include": [
		"src/**/*.d.ts",
		"src/**/*.js",
		"src/**/*.svelte",
	]
}
